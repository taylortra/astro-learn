---
import Layout from '../layouts/Layout.astro';
---
<Layout>
  <div class="min-h-screen bg-gray-100 flex items-center justify-center">
    <div class="max-w-md w-full bg-white shadow-md rounded-lg p-6">
      <h1 class="text-2xl font-bold text-center mb-4">Astrology Insights</h1>
      <p class="text-center mb-6">Explore the mystical world of astrology and discover your star sign.</p>
      <div class="grid grid-cols-3 gap-4">
        <div class="text-center">
          <img src="/img/aries.jpg" alt="Aries" class="w-16 h-16 mx-auto mb-2">
          <p>Aries</p>
        </div>
        <div class="text-center">
          <img src="/img/taurus.jpg" alt="Taurus" class="w-16 h-16 mx-auto mb-2">
          <p>Taurus</p>
        </div>
        <div class="text-center">
          <img src="/img/cancer.jpg" alt="cancer" class="w-16 h-16 mx-auto mb-2">
          <p>Cancer</p>
        </div>
        <!-- Add more zodiac signs similarly -->
      </div>
    </div>
  </div>
</Layout>
